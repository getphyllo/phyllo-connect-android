<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_new"
        style="@style/themeBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:text="@string/connect_all_platform_text"
        android:textColor="@color/connect_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".6" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/launch_instagram"
        style="@style/themeBtn"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:text="@string/connect_instagram_text"
        android:textColor="@color/connect_white"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_new"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/launch_youtube"
        style="@style/themeBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:inputType="textCapWords"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:text="@string/connect_youtube_text"
        android:textColor="@color/connect_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/launch_instagram"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".6" />


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/user_availability_check"
        style="@style/semiboldTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"
        android:text="@string/existing_user_text"
        android:textColor="@color/connect_black"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/launch_youtube"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".6" />


</androidx.constraintlayout.widget.ConstraintLayout>